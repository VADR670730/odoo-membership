<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record model="ir.ui.view" id="membership_view_partner_form">
    <field name="name">Membership Process</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form" />
    <field name="arch" type="xml">
      <sheet position="before">
        <header>
            <button name="start_admission" string="Start Admission" type="object" help="Start the admission process" attrs="{'invisible':[('membership_recruitment_status_id', '!=', False)]}"/>
          <field name="membership_recruitment_status_id" widget="statusbar" />
        </header>
      </sheet>
    </field>
  </record>
  <record model="ir.ui.view" id="view_res_partner_filter">
    <field name="name">res.partner.select.membership</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_res_partner_filter" />
    <field name="arch" type="xml">
      <field name="parent_id" positon="after">
        <field name="membership_recruitment_status_id" />
      </field>
      <filter name="group_country" position="after">
        <filter name="group_membership_status" string="Membership Recruitment Status" context="{'group_by': 'membership_recruitment_status_id'}" />
      </filter>
    </field>
  </record>
  <record id="action_admission_form" model="ir.actions.act_window">
    <field name="name">Admission</field>
    <field name="res_model">res.partner</field>
    <field name="view_type">form</field>
    <field name="view_mode">kanban,tree,form</field>
    <field name="domain">[("membership_recruitment_status_id","&lt;&gt;", "closed"), ("membership_recruitment_status_id", "!=", False)]</field>
    <field name="context">{"search_default_group_membership_status": 1}</field>
    <field name="view_id" ref="base.res_partner_kanban_view" />
    <field name="act_window_id" ref="membership.action_membership_members" />
    <field name="search_view_id" ref="base.view_res_partner_filter" />
  </record>
  <menuitem id="res_partner_menu_admission" name="Admission" parent="membership.menu_membership" action="action_admission_form" sequence="5" />
</odoo>
