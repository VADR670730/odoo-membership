<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="index" name="Events">
    <t t-call="website.layout">
      <div id="wrap">
        <div class="container">
          <div class="row mt8">
            <div class="col-md-12">
              <form id="name_phone_address_form" action="/form/post" method="post">
                <div class="form-group">
                  <label for="name">Namn</label>
                  <input type="text" class="form-control" name = "name"  id="name" aria-describedby="emailHelp" placeholder="Ange namn" />
                </div>
                <div class="form-group">
                  <label for="phone">Telefonnummer</label>
                  <input type="text" class="form-control" name="phone" id="phone" placeholder="Ange telefonnummer" />
                </div>
                <div class="form-group">
                  <label for="address">Address</label>
                  <input type="text" class="form-control" name = "address"  id="address" placeholder="Ange address" />
                </div>
                <button id="submit_btn" type="submit" class="btn btn-primary">Skicka</button>
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
              </form>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>
