<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="portal_layout" inherit_id="portal.portal_layout" name="Event Type Tags My Details">
    <xpath expr="//div[@class='o_portal_my_details']" position="after">
      <div class="col-xl-6">
        <h1>Fields of Interest</h1>
        <t t-foreach="request.env['event.type.tag'].search([])" t-as="tag">
          <div class="" >
            <t t-if="tag in request.env.user.partner_id.event_type_tag_ids">
                <input type="checkbox" t-attf-id="tag.id" t-attf-name="tag.name" class="sst-field-of-interest-select" checked='1' >
                    <b t-raw="tag.name"> </b>
                </input>
            </t>
            <t t-if="not tag in request.env.user.partner_id.event_type_tag_ids">
                <input type="checkbox" t-attf-id="tag.id" t-attf-name="tag.name" class="sst-field-of-interest-select" >
                    <b t-raw="tag.name"> </b>
                </input>
            </t>
          </div>
        </t>
      </div>
    </xpath>
  </template>
  <template id="assets_frontend" inherit_id="website.assets_frontend" name="Event Type Tags">
    <xpath expr="." position="inside">
        <script type="text/javascript" src="/portal_event/static/src/js/portal_event.js"/>
    </xpath>
  </template>
</odoo>

